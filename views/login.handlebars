{{>public-navbar}}
<main class="shadow rounded overflow-hidden container mt-5 col-md-7">
  <!-- Login form -->
  <form id="login-form">
    <!-- Form title -->
    <h1 class="card-title mt-3 mb-4 text-center">Login</h1>
    <div id="alert-message"></div>
    <div>

      <!-- Email -->
      <div class="mb-4 col-md-5 mx-auto">
        <label class="mb-1">Email Address</label>
        <input id="email" type="email" name="email" class="form-control" placeholder="Enter Email Address" />
      </div>

      <!-- Password -->
      <div class="mb-4 col-md-5 mx-auto">
        <label class="mb-1">Password</label>
        <input id="password" type="password" name="password" class="form-control" placeholder="Enter Password" />
      </div>

    </div>
    </div>

    <!-- Login button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg mt-3">
        Login
      </button>
    </div>
  </form>
</main>