
{{>private-navbar}}

<main class="shadow rounded overflow-hidden container mt-5 mb-5 col-md-7">
  <!-- Signup form -->
  <form id="food-post-form">
    <!-- Form title -->
    <h1 class="card-title mt-3 mb-4 text-center">Post New Food</h1>

    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-2">Upload Food Image</label>
      <br />
      <input class="mb-3" id="food-image" type="file" accept="image/*" />
      <br />
      <label class="mb-2">...or use URL</label>
      <input
        id="food-image-url"
        type="text"
        class="form-control mb-4"
        placeholder="https://"
      />
    </div>

    <!-- Food title -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Food Title</label>
      <input
        id="food-title"
        type="text"
        name="food-title"
        class="form-control"
        placeholder="Type Food Title"
      />
    </div>

    <!-- Food description -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Food Description</label>
      <textarea
        class="form-control"
        id="food-description"
        rows="2"
        placeholder="Type Food Description"
      ></textarea>
    </div>

    <!-- Food price -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Food Price</label>
      <div class="input-group">
        <span class="input-group-text">Â£</span>
        <input type="text" class="form-control" id="food-price" />
        <span class="input-group-text">.00</span>
      </div>
    </div>

    <!-- Food location -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Address</label>
      <input
        id="food-address"
        type="text"
        class="form-control"
        placeholder="Address"
      />
    </div>

    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">City</label>
      <input
        id="food-city"
        type="text"
        class="form-control"
        placeholder="Type City"
      />
    </div>

    <!-- Food Type -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Food Type</label>
      <select id="food-type" class="form-control">
        <option selected>Choose...</option>
        <option>Grocery</option>
        <option>Meal</option>
        <option>Dessert</option>
      </select>
    </div>

    <!-- Availability -->
    <div class="mb-3 mx-auto col-md-6">
      <label class="mb-1">Availability</label>
      <select id="food-item" class="form-control">
        <option selected>Choose...</option>
        <option>Available</option>
        <option>Unavailable</option>
      </select>
    </div>

    <!-- Post button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg mt-3">
        Post
      </button>
    </div>
  </form>
</main>